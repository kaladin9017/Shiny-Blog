{
  "name": "Shine",
  "description": "Basic Theme for Shine Blog",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "build": "npm run hugo-build && npm run webpack-build",
    "hugo-build": "hugo --config=config/hugo.config.yaml --destination=public",
    "hugo-server": "hugo server --config=config/hugo.config.toml --destination=public",
    "webpack-server": "webpack-dev-server --config=config/webpack.config.js --port=8282 --watch --debug --verbose --progress --colors",
    "webpack-watcher": "webpack --config=config/webpack.config.js --watch --debug --verbose --progress --colors",
    "webpack-build": "webpack --config=config/webpack.config.js"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.1",
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.0.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.16",
    "css-loader": "^0.28.1",
    "eslint": "^3.19.0",
    "extract-text-webpack-plugin": "^2.1.0",
    "node-sass": "^4.5.2",
    "postcss-loader": "^2.0.5",
    "sass-loader": "^6.0.5",
    "webpack": "^2.5.1"
  },
  "dependencies": {
    "es6-docready": "^1.0.0",
    "immutable": "^3.8.1",
    "redux": "^3.6.0",
    "react": "^15.3.2",
    "react-dom": "^15.3.2",
    "react-redux": "^4.4.6",
    "whatwg-fetch": "^2.0.0",
    "es6-promise": "^4.0.5",
    "chalk": "^1.1.3",
    "cli-table2": "^0.2.0",
    "contentful": "^4.3.0",
    "moment": "^2.18.1"
  }
}
